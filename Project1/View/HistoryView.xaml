<UserControl
    x:Class="UII.View.HistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UII.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Border Background="#EFEFEF" CornerRadius="0 10 10 0">
        <Grid>
            <Border
                Background="{StaticResource SecondaryColor}"
                BorderBrush="White"
                BorderThickness="0.5"
                CornerRadius="0 0 10 0" />
            <DockPanel LastChildFill="True">
                <Grid
                    Width="400"
                    Margin="15"
                    DockPanel.Dock="Left">
                    <Border
                        Background="#FFFFFF"
                        BorderBrush="White"
                        BorderThickness="0.5"
                        CornerRadius="10" />
                    <DockPanel LastChildFill="True">
                        <TextBlock
                            Margin="20,5,0,0"
                            DockPanel.Dock="Top"
                            FontFamily="Segoe UI"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="File Browser" />
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                            <Button
                                Width="80"
                                Height="40"
                                Margin="5"
                                Background="{StaticResource MenuBackgroundBrush1}"
                                Click="btnOpenFolderClick"
                                Content="LOG"
                                Foreground="White"
                                Style="{StaticResource MyButton}" />
                            <Button
                                Width="80"
                                Height="40"
                                Margin="5"
                                Background="{StaticResource MenuBackgroundBrush1}"
                                Click="btnOpenFolderClick"
                                Content="STARTUP"
                                Foreground="White"
                                Style="{StaticResource MyButton}" />
                            <Button
                                Width="80"
                                Height="40"
                                Margin="5"
                                Background="{StaticResource MenuBackgroundBrush1}"
                                Click="btnOpenFolderClick"
                                Content="C:\"
                                Foreground="White"
                                Style="{StaticResource MyButton}" />
                            <Button
                                Width="80"
                                Height="40"
                                Margin="5"
                                Background="{StaticResource MenuBackgroundBrush1}"
                                Click="btnOpenFolderClick"
                                Content="D:\"
                                Foreground="White"
                                Style="{StaticResource MyButton}" />
                        </StackPanel>
                        <ListBox
                            Name="lsbFileBrowser"
                            Margin="0,10,0,15"
                            BorderThickness="0"
                            MouseDoubleClick="lsbFileBrowser_MouseDoubleClick" />
                    </DockPanel>
                </Grid>
                <Grid Margin="0,15,15,15">
                    <Border
                        Background="#FFFFFF"
                        BorderBrush="White"
                        BorderThickness="0.5"
                        CornerRadius="10" />
                    <Grid x:Name="gridDataShow" Margin="10">
                        <TextBlock
                            x:Name="TextBlockView"
                            Foreground="Black"
                            TextWrapping="WrapWithOverflow"
                            Visibility="Collapsed" />
                    </Grid>
                </Grid>
            </DockPanel>

        </Grid>
    </Border>
</UserControl>
