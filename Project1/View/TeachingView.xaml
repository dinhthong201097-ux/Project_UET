<UserControl x:Class="UII.View.TeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UII.View"
             xmlns:viewmodels="clr-namespace:UII.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:TeachingVM/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="Navy" Margin="10">
            <Image Source="{Binding CurrentImage}" Stretch="Uniform"/>
            <Grid>
                <Canvas>
                    <Rectangle Width="{Binding RoiWidth}" 
                        Height="{Binding RoiHeight}" 
                        Stroke="Red" 
                        StrokeThickness="2" 
                        Canvas.Left="{Binding RoiX}" 
                        Canvas.Top="{Binding RoiY}">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>

                    </Rectangle>
                </Canvas>
            </Grid>

        </Grid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Setup Vision" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="OPEN" Command="{Binding OpenImageCommand}" Margin="5" Height="35" FontSize="14"/>
                <Button Grid.Column="1" Content="BACK" Command="{Binding PreviousImageCommand}" Margin="5" Height="35" FontSize="14"/>
                <Button Grid.Column="2" Content="NEXT" Command="{Binding NextImageCommand}" Margin="5" Height="35" FontSize="14"/>
            </Grid>

            <TextBlock Text="Setting Region" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ROI X:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding RoiX, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                <TextBlock Text="ROI Y:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox Text="{Binding RoiY, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
            </StackPanel>

            <Button Content="Inspect Product" Command="{Binding InspectProductCommand}" Margin="0,10" Height="35" FontSize="14"/>

            <TextBlock Text="Result:" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding InspectionResult}" FontSize="18" FontWeight="Bold" Foreground="Green"/>

            <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}" Margin="0,20,0,5" Height="35" FontSize="14"/>
            <Button Content="Cancel" Margin="0,5" Height="35" FontSize="14"/>
        </StackPanel>

    </Grid>
</UserControl>
